<!DOCTYPE html>
<html>
<head>
	<title>Registration</title>
</head>
<body>
	<h1>Registration</h1>

	<a href="/login">Login</a>

<br><br>

<form method="post" onsubmit="return validate()">
	<table border="0">
		<tr>
			<td>Name</td>
			<td><input type="text" name="name" id="name">
				<label id="errname" style="visibility: hidden;">Invalid</label>
			</td>
			</tr>
		<tr>
			<td>Username</td>
			<td><input type="text" name="username"></td>
		</tr>
		<tr>
			<td>Password</td>
			<td><input type="password" name="password"></td>
		</tr>
		<tr>
			<td>Email</td>
			<td><input type="text" name="email"></td>
		</tr>
		<tr>
			<td>User Type</td>
			<td><input type="text" name="utype" placeholder="0 for admin and 1 for Customer">
			</td>
			<!-- <td><select name="utype">
				<option value="0">Admin</option>
				<option value="1">Customer</option>
			</select></td> -->
		</tr>
		<tr>
			<td></td>
			<td><input type="submit" name="submit" value="submit"></td>
		</tr>
	</table>
</form>

<script type="text/javascript">
	document.alert('')
	function validate(){
		var name = document.getElementById("name");
	if(name.value.trim()<5)
	{
		document.getElementById("errname").style.visibility="visible";
		return false;
	}
	}
</script>

</body>
</html>