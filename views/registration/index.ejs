<!DOCTYPE html>
<html>
<head>
	<title>Registration</title>
</head>
<body>
	<h1>Registration</h1>
	<a href="/login">Login</a>
<br><br>

<form method="post" onsubmit="return validate()">
	<table border="0">
		<tr>
			<td>Name</td>
			<td>:</td>
			<td><input type="text" name="name" id="name">
				<label id="errname" style="visibility: hidden;">Can not remain Empty</label>
			</td>
			</tr>
		<tr>
			<td>Username</td>
			<td>:</td>
			<td><input type="text" name="username" id="username">
				<label id="erruname1" style="visibility: hidden;">Can not remain Empty/Has to be unique</label>
			</td>
		</tr>
		<tr>
			<td>Password</td>
			<td>:</td>
			<td><input type="password" name="password"></td>
		</tr>
		<tr>
			<td>Email</td>
			<td>:</td>
			<td><input type="email" name="email"></td>
		</tr>
		<tr>
			<td>User Type</td>
			<td>:</td>
			<td><select name="utype">
				<option value="0">Admin</option>
				<option value="1">Customer</option>
			</select></td>
		</tr>
		<tr>
			<td></td>
			<td></td>
			<td><input type="submit" name="submit" value="submit"></td>
		</tr>
	</table>
</form>

<script type="text/javascript">
	document.alert('')
	function validate(){
		var name = document.getElementById("name");
		var username = document.getElementById("username");
		if(name.value.trim() == "")
		{
			document.getElementById("errname").style.visibility="visible";
			return false;
		}
		if(username.value.trim() == "")
		{
			document.getElementById("erruname1").style.visibility="visible";
			return false;
		}
	}
</script>

</body>
</html>